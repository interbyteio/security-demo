// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
     provider = "prisma-client-js"
}

datasource db {
     provider = "postgresql"
     url      = env("DATABASE_URL")
}

model APIKey {
     id        Int            @default(autoincrement()) @id
     key       String         @unique
     created   DateTime       @default(now())
     expires   DateTime?
     scopes    String[]
     note      String?
}

model Nonce {
     id        Int            @default(autoincrement()) @id
     nonce     String         @unique
}